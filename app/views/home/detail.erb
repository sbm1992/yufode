    <div class="jumbotron">
      
      <img src="<%= @reply.img %>" width="100%">
      <h1><%= @reply.title %></h1>
      <p class="lead"><%= @reply.comment %></p>
      <p><%=@reply.avg.round(2) %>점 (<%= @reply.connects.count %>명)

       <%= form_tag "/home/replys", method: "POST" do%>
         <input type="hidden" name="tv_id" value="<%= @reply.id %>">
           <span class="star-rating">
              <input type="radio" name="rating" value="1"><i></i>
              <input type="radio" name="rating" value="2"><i></i>
              <input type="radio" name="rating" value="3"><i></i>
              <input type="radio" name="rating" value="4"><i></i>
              <input type="radio" name="rating" value="5"><i></i>
            </span>
          <br>
          <input type="text" class="form-control" name="msg" placeholder="별점 체크 후 평가를 남겨주세요">
          <br>
          <button class="btn btn-default" href="#" role="button">평가하기</button>
       <% end %>
       
    </div>
        <% @reply.connects.each do |c|%>
            <div class="well">
                <span class="star-rating small">
                    <% 1.upto(5) do |i| %>
                        <% if i == c.score %>
                            <i class="on"></i>
                        <% else %>
                            <i></i>
                        <% end %>
                    <% end %>
                </span>
                <p> <%= c.dmsg%> </p>
            </div>
        <% end %>